<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/wifidialog_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/wifidialog_root_pad"
              android:paddingRight="@dimen/wifidialog_root_pad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wifidialog_llyt_item_height"
        android:paddingLeft="@dimen/wifidialog_llyt_item_pad"
        android:paddingRight="@dimen/wifidialog_llyt_item_pad"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wifidialog_tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:text="huawei_guest"/>

        <TextView
            android:id="@+id/wifidialog_tv_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:textColor="#000000"
            android:textSize="@dimen/wifidialog_tv_state_textsize"
            android:paddingRight="@dimen/wifidialog_tv_state_padr"
            android:text="已连接"/>

        <ImageView
            android:id="@+id/wifidialog_tv_item_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"/>
</LinearLayout>